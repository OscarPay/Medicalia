<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1">

    <LinearLayout
        android:id="@+id/container_diagnostics"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_weight="0.25"
        android:background="@color/background_material_dark"
        android:orientation="vertical"
        android:weightSum="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="63dp">

            <ImageView
                android:id="@+id/image_doctor_icon"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="10dp"
                android:src="@drawable/doctor_icon" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_doctor_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Kevin Pacheco K"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="@android:color/white" />

                <TextView
                    android:id="@+id/tv_doctor_speciality"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Speciality"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@color/abc_background_cache_hint_selector_material_light" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_margin="20dp"
                android:text="Date"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/abc_background_cache_hint_selector_material_light"
                android:layout_weight="0.11" />

        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="2dp"
            android:background="#c0c0c0" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:id="@+id/diagnostic_clicker"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/image_diagnostic"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="5dp"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/sick_icon"
                    android:textAlignment="center" />

                <TextView
                    android:id="@+id/tv_diagnostic"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="10dp"
                    android:text="Diagnostico"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="@color/abc_background_cache_hint_selector_material_light" />

            </LinearLayout>

            <TextView
                android:id="@+id/tv_diagnostic_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:gravity="center_horizontal"
                android:text="Hey"
                android:textColor="@color/abc_background_cache_hint_selector_material_light"/>


        <View
            android:layout_width="fill_parent"
            android:layout_height="2dp"
            android:background="#c0c0c0" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:id="@+id/treatment_clickeable">

                <ImageView
                    android:id="@+id/image_treatment"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentStart="true"
                    android:layout_gravity="center_vertical"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/pill_icon"
                    android:textAlignment="center" />

                <TextView
                    android:id="@+id/tv_treatmentName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/image_diagnostic"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="10dp"
                    android:layout_toEndOf="@+id/image_diagnostic"
                    android:text="Tratamiento"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="@color/abc_background_cache_hint_selector_material_light" />

            </LinearLayout>

            <TextView
                android:id="@+id/tv_treatment_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:text="Hey"
                android:textColor="@color/abc_background_cache_hint_selector_material_light"/>
        </LinearLayout>

</LinearLayout>